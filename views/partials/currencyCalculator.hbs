<div id="currencyCalculatorWrapper" class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between">
  <div class="w-100 w-md-40 border-1 currency-calc-input-wrapper">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text bg-light font-size-03" style="width: 75px;">ENQ</span>
      </div>
      <input type="number" class="form-control currency-calc-input" data-currency-name="ENQ" aria-label="ENQ amount (with dot and two decimal places)" placeholder="0" value="1">
    </div>
  </div>
  <button id="switchCurrencyInputOrder" class="btn btn-soft-primary d-flex align-items-center mb-3 mx-auto" type="button">
    <span class="d-none d-md-flex flex-md-column switch-input-order switch-input-order-row switch-input-order-transform-right">
      <i class="fas fa-long-arrow-alt-right"></i>
      <i class="fas fa-long-arrow-alt-left"></i>
    </span>
    <span class="d-block d-md-none switch-input-order switch-input-order-column switch-input-order-transform-top">
      <i class="fas fa-long-arrow-alt-down"></i>
      <i class="fas fa-long-arrow-alt-up"></i>
    </span>
  </button>
  <div class="w-100 w-md-40 currency-calc-input-wrapper">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <span class="input-group-text bg-light font-size-03" style="width: 75px;">USD</span>
      </div>
      <input type="number" class="form-control currency-calc-input" data-currency-name="USD" aria-label="USD amount (with dot and two decimal places)" placeholder="0">
    </div>
  </div>
</div> 