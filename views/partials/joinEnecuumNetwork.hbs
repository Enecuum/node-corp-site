<div class="container" id="startMiningToday">
    <div class="row">
        <div class="col-12 col-lg-6 py-10">
            <h2 class="mb-8 text-center text-md-left">{{__ 'JOIN_ENECUUM_NETWORK'}}</h2>
            {{> lightROICalc}}

            <div class="text-center text-md-left ">
                <h4 class="mb-5">{{__ 'DOWNLOAD_ANDROID_MASTERNODE'}}</h4>
                <div class="mb-5">
                    <a class="androidminerButton btn btn-primary py-0 mr-0 mr-md-3 transition-3d-hover" href="{{enecuumAppLink.masternode}}" role="button" style="border: 2px solid #a6a6a6; background: black;">
                        <div class="d-flex align-items-center" style="height: 48px;"><i class="fab fa-android mr-2" style="font-size: 37px;"></i><span class="font-weight-bold font-size-03">Android miner</span></div>
