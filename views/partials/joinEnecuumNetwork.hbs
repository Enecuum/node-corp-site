        <div class="col-lg-6 d-none d-lg-flex align-items-center">
            <div class="position-relative ml-auto" id="startMiningMobileColumn">
                <img src="/img/enq/start-mining-mobile.png" alt="Start minig mobile">
                <div id="startMiningBlueMark" class="start-mining-{{currentLang}}">{{__ 'START_MINING'}}</div>
                <a href="{{guidesLink}}" target="_blank" id="startMiningBlueMarkRing" class="startminingButton rotating"></a>
